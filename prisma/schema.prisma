generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Page {
  id              String         @id @default(uuid())
  title           String
  content         String         @default("") // Store rich text content
  parentId        String?
  parent          Page?          @relation("ParentChild", fields: [parentId], references: [id])
  children        Page[]         @relation("ParentChild")
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  userToPageMap   UserToPageMap? @relation(fields: [userToPageMapId], references: [id])
  userToPageMapId String?
}

model User {
  id              String         @id @default(uuid())
  name            String
  userId          String // Unique identifier for the user (e.g., client ID)
  updatedAt       DateTime       @updatedAt
  userToPageMap   UserToPageMap? @relation(fields: [userToPageMapId], references: [id])
  userToPageMapId String?
}

model UserToPageMap {
  id     String @id @default(uuid())
  role   String
  userId String
  pageId String
  user   User[]
  page   Page[]
}
